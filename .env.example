# Server Configuration
PORT=3000
NODE_ENV=development

# API Configuration
API_PREFIX=/api/v1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
# For development: use * to allow all origins
# For production: specify exact origins (comma-separated for multiple)
# Example: CORS_ORIGIN=https://example.com,https://app.example.com
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
